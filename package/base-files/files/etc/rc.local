#!/bin/sh

# Check if we are in qemu
ARCH=$(uname -m)

# Detect my guest number
LB=$(ifconfig eth0| grep HWaddr | sed 's/:01[\n\ ]*$//' | sed 's/.*://'| sed 's/[\n\ ].*//')

# Check host architecture
if [ ${ARCH} = "i686" ]; then

    # Setup for emulation
    IF="eth0"
    NUM=1${LB}
    NODE="n$((0x${LB}))"
    ifconfig bat0 10.10.0.${NUM}
    ifconfig bat0 up

else

    # Setup for OM1P
    IF="mesh0"
    case "${LB}" in
        "19")
            NODE="n0"
            NUM="100"
            ;;
        "D9")
            NODE="n1"
            NUM="101"
            ;;
        "15")
            NODE="n2"
            NUM="102"
            ;;
        "81")
            NODE="n3"
            NUM="103"
            ;;
        "09")
            NODE="n4"
            NUM="104"
            ;;
        "87")
            NODE="n5"
            NUM="105"
            ;;
        "A3")
            NODE="n6"
            NUM="106"
            ;;
        "79")
            NODE="n7"
            NUM="107"
            ;;
        "59")
            NODE="n8"
            NUM="108"
            ;;
        "D5")
            NODE="n9"
            NUM="109"
            ;;
        *)
            NODE="nn"
            NUM="200"
    esac

fi

# Setup hostname
sed -i -e "s/OpenWrt/${NODE}/" /etc/config/system
echo ${NODE} > /proc/sys/kernel/hostname

# Setup hard iface
ifconfig ${IF} mtu 1600
ifconfig ${IF} up
#ifconfig ${IF} promisc

# Setup batman-adv
batctl if add ${IF}
echo 1 > /sys/devices/virtual/net/bat0/mesh/catwoman
echo 10 > /sys/devices/virtual/net/bat0/mesh/catwoman_hold
echo 2000 > /sys/devices/virtual/net/bat0/mesh/catwoman_purge

if [ ${IF} = "mesh0" ]; then
    ifconfig wifi0 txqueuelen 10
    iwconfig mesh0 rts 10
    iwconfig mesh0 txpower 15
    iwconfig mesh0 rate 2M fixed
    brctl addbr br0
    brctl addif br0 bat0
    ifconfig br0 10.10.0.${NUM} netmask 255.255.255.0
    ifconfig br0 up
    ifconfig bat0 up

    # Try to get dhcp on eth0
    udhcpc -n eth0
    if [ $? -ne 0 ]; then
        # dhcp failed, bridge instead
        brctl addif br0 eth0
    fi

    python /bin/cmd.py &
fi

